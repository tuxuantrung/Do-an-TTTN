@model CayCanh.Models.Post

@{
    ViewBag.Title = "Thêm bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <link rel="stylesheet" href="~/public/icon-font/fontawesome.com/css/all.min.css" />
    ;
}

@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            THÊM BÀI VIẾT
                        </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit"><i class="fa-solid fa-floppy-disk"></i>Lưu</button>
                        <a href="@Url.Action("Index","Post")" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-rotate-left"></i>Quay về danh sách
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="md-3">
                            <label for="name"> Tên bài viết </label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="md-3">
                            <label for="name"> Chi tiết bài viết </label>
                            <input class="form-control text-box single-line" data-val="true" data-val-required="The Detail field is required." id="Detail" name="Detail" type="text" value="">
                            <span class="field-validation-valid text-danger" data-valmsg-for="Detail" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group">
                            <label for="MetaKey"> Từ khóa SEO </label>
                            @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="MetaDesc"> Mô tả bài viết </label>
                            @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        @*<div class="form-group">
                            <label for="ParentId"> Mã loại cấp cha </label>
                            @Html.DropDownListFor(model => model.ParentId, (SelectList)ViewBag.ListCatId, "None", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                        </div>*@
                        <div class="mb-3">
                            <label for="Img"><strong>Chọn hình ảnh</strong></label>
                            <input name="Img" type="file" class="input-group"></input>
                        </div>
                        <div class="form-group">
                            <label for="Status"> Trạng thái </label>
                            @Html.DropDownListFor(
                                model => model.Status,
                        new[] {
                            new SelectListItem {Text="Chưa xuất bản", Value="2"},
                            new SelectListItem {Text="Xuất bản", Value="1"},
                        },
                        null,
                        new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-success btn-sm" type="submit"><i class="fa-solid fa-floppy-disk"></i>Lưu</button>
                <a href="@Url.Action("Index","Post")" class="btn btn-sm btn-info">
                    <i class="fa-solid fa-rotate-left"></i>Quay về danh sách
                </a>
            </div>
        </div>
    </section>
}
