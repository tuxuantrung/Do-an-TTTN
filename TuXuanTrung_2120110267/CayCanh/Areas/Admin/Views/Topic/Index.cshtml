@model IEnumerable<CayCanh.Models.Topic>

@{
    ViewBag.Title = "Tất cả chủ đề bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <link rel="stylesheet" href="~/public/icon-font/fontawesome.com/css/all.min.css" />
    ;
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        TẤT CẢ CHỦ ĐỀ BÀI VIẾT
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create","Topic")" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-plus"></i>Thêm
                    </a>
                    <a href="@Url.Action("Trash","Topic")" class="btn btn-sm btn-danger">
                        <i class="fa-solid fa-trash"></i>Thùng rác
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @Html.Partial("Message")
            <table class="table table-bordered">
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:20px;" class="text-center">Id</th>
                    <th style="width:250px;" class="text-center">Tên chủ đề bài viết</th>
                    <th style="width:160px;" class="text-center">Ngày tạo</th>
                    <th style="width:200px;" class="text-center">Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Slug</td>
                        <td class="text-center">@item.CreateAt</td>
                        <td class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status","Topic",new { id = item.Id })
                                   " class="btn btn-sm btn-success">
                                    <i class="fa-solid fa-toggle-on"></i>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status","Topic",new { id = item.Id })
                                   " class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-tongle-off"></i>
                                </a>
                            }
                            <a href="@Url.Action("Edit","Topic",new { id = item.Id })" class="btn btn-sm btn-success">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a href="@Url.Action("Details","Topic",new { id = item.Id })" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a href="@Url.Action("Delete","Topic",new { id = item.Id })" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>

                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </table>
        </div>
        <div class="card-footer text-right">
            <a href="@Url.Action("Create","Topic")" class="btn btn-sm btn-success">
                <i class="fa-solid fa-plus"></i>Thêm
            </a>
            <a href="@Url.Action("Trash","Topic")" class="btn btn-sm btn-danger">
                <i class="fa-solid fa-trash"></i>Thùng rác
            </a>
        </div>
    </div>
</section>




