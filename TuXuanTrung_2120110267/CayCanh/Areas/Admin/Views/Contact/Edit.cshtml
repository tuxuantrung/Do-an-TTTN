@model CayCanh.Models.Contact

@{
    ViewBag.Title = "Cập nhật liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <link rel="stylesheet" href="~/public/icon-font/fontawesome.com/css/all.min.css" />
;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(Model => Model.CreateAt)
    @Html.HiddenFor(Model => Model.CreateBy)

    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            THÊM LIÊN HỆ
                        </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit"><i class="fa-solid fa-floppy-disk"></i>Lưu[Cập nhật]</button>
                        <a href="@Url.Action("Index","Contact")" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-rotate-left"></i>Quay về danh sách
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="md-3">
                            <label for="name"> Tên liên hệ </label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="md-3">
                            <label for="name"> Chi tiết liên hệ </label>
                            @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="MetaKey"> Từ khóa SEO </label>
                            @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="MetaDesc"> Mô tả liên hệ </label>
                            @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                            <div class="form-group">
                                <label for="Status"> Trạng thái </label>
                                @Html.DropDownListFor(
                                    model => model.Status,
                            new[] {
                                new SelectListItem {Text="Chưa xuất bản", Value="2"},
                                new SelectListItem {Text="Xuất bản", Value="1"},
                            },
                            null,
                            new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-success btn-sm" type="submit"><i class="fa-solid fa-floppy-disk"></i>Lưu[Cập nhật]</button>
                <a href="@Url.Action("Index","Contact")" class="btn btn-sm btn-info">
                    <i class="fa-solid fa-rotate-left"></i>Quay về danh sách
                </a>
            </div>
        </div>
    </section>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
