@model IEnumerable<CayCanh.Models.Slider>

<div class="section-slider">
    <div class="owl-carousel owl-theme owl-loaded">
        <div class="owl-stage-outer">
            <div class="owl-stage">
                @{ int index = 1;}
                @foreach (var slider in Model)
                {
                    <div class="owl-item">
                        <img src="~/public/image/slider/@slider.Img" class="d-block w-100" alt="@slider.Img" />
                    </div>
                    index++;
                }
            </div>

        </div>
    </div>
</div>

