@model IEnumerable<CayCanh.Models.Product>



    @*//Phai lay duoc CatId tu ben trang kia => kiem tra ben trang nay, sau do chi lay nhung san pham voi CatId
        //CatId=1
        Hien thi 10 san pham
        =>Thieu dieu kien ktr*@


<section class="maincontent clearfix">
    <div class="contained py-4">
        <div class="row"> 
            <!----------end col-md-3 col-lg-3-------->
            <div class="col-md-12 col-lg-12">
                <div class="row my-3">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-3 md-3">
                            <div class="item product-item">
                                <div class="card" style="width: 100%">
                                    <a href="~/@product.Slug">
                                        <img src="~/public/image/product/@product.Img"
                                             class="img-fluid card-img-top" alt="..." />
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title text-center">
                                            <a class="text-dark" style="text-decoration: none" href="~/@product.Slug">@product.Name</a>
                                        </h5>
                                        <h6 class="text-center">
                                            <strong>
                                                <del><span class="price text-black-50">@string.Format("{0:0,0}", product.Price)</span></del>
                                                <span class="text-danger">@string.Format("{0:0,0}", product.PriceSale)</span><sup>đ</sup>
                                            </strong>
                                        </h6>
                                        <div class="btn-groupw w-100" role="group" aria-label="Basic example">
                                            <a href="@Url.Action("AddCart", "Cart", new { @productid = product.Id})"
                                               class="form-control btn btn-success">Đặt mua</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


